#!/usr/bin/env bash
echo "Starting nginx web server..." && \
nginx && \
mkdir -p /okl/app/tmp/pids && \
rm -f /okl/app/tmp/pids/puma.pid && \
bundle install --with test development && \
echo -n "DB " && \
rake db:create && \
rake db:migrate && \
rake db:version && \
echo "Starting puma application server..." && \
export RAILS_RELATIVE_URL_ROOT='/item_indexer' && \
bundle exec puma -b unix:///var/run/puma.sock
